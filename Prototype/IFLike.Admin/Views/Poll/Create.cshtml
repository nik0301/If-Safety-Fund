@model IFLike.Dto.PollCreateDto
@{
    ViewData["Title"] = "Create Poll";
}

<h2>Poll Information</h2>
@using (Html.BeginForm("Create", "Poll", FormMethod.Post,
                                                    new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Poll.Name, "Name")
        @Html.TextBoxFor(x => x.Poll.Name, new { @class = "form-control", placeholder = "Name" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Poll.Description, "Description")
        @Html.TextAreaFor(x => x.Poll.Description, new { @class = "form-control", rows = "3", placeholder = "Description" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Poll.Start, "Start Date")
        @Html.TextBoxFor(x => x.Poll.Start, "{0:dd/MM/yyyy}", new { @class = "form-control  dt-picker", placeholder = "Start Date" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Poll.End, "End Date")
        @Html.TextBoxFor(x => x.Poll.End, "{0:dd/MM/yyyy}", new { @class = "form-control dt-picker", placeholder = "End Date" })
    </div>
    <h2>Poll Item Information</h2>
    <div class="form-group">
        @Html.LabelFor(x => x.Item.Name, "Name")
        @Html.TextBoxFor(x => x.Item.Name, new { @class = "form-control", placeholder = "Name" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Item.Description, "Description")
        @Html.TextAreaFor(x => x.Item.Description, new { @class = "form-control", rows = "3", placeholder = "Description" })
    </div>

    <div class="form-group">
        <label for="file">Default Image</label>
        <input type="file" id="file" name="file">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
}
@section Scripts{ 
    <script>
        $('input.dt-picker').datepicker(
            {
                format: "dd/mm/yyyy"
            }
        );
    </script>
}


